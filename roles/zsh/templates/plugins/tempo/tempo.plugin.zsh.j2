function __tempo_print_code() {
    local code="$1"
    local description="$2"

    # https://stackoverflow.com/a/5947802/3536425
    printf '    \e[0;32m%-10s\e[0;m     %-20s\n' "$code" "$description"
}

function __tempo_print_project_name() {
    local project_name="$1"

    printf '\e[0;32m%s\e[0;m\n' "$project_name"
}
